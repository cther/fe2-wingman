services:
  fe2_wingman:
    container_name: fe2_wingman
    image: python:3.13-alpine
    restart: unless-stopped
    volumes:
      - ./src:/usr/src/myapp
    command:
      sh -c "pip install --no-cache-dir -r /usr/src/myapp/requirements.txt && python -u /usr/src/myapp/main.py"
    environment:
      TZ: "Europe/Berlin"